{
  "expo": {
    "name": "dma-calculator",
    "slug": "dma-calculator",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "dmacalculator",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.antigravity.dmacalculator"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "package": "com.antigravity.dmacalculator",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png",
      "name": "DMA Calculator 2026",
      "shortName": "DMA Calc",
      "description": "Simula le commissioni App Store & Google Play in Europa",
      "display": "standalone",
      "backgroundColor": "#ffffff",
      "themeColor": "#4f46e5",
      "startUrl": "/"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://claudiocavalli.github.io/dma-calculator"
        }
      ],
      "expo-localization",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-localization"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true,
      "baseUrl": "/dma-calculator"
    }
  }
}